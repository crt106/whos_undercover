{
  "name": "whos-undercover",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "node server/index.js",
    "client": "cd client && pnpm dev",
    "build": "cd client && pnpm build",
    "start": "pnpm run build && NODE_ENV=production node server/index.js",
    "install:all": "pnpm install"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  }
}
